<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent" 
  android:background="#ffffff">
  <RelativeLayout android:id="@+id/rr_album_title"
    android:layout_width="fill_parent"
    android:background="#ffffff"
    android:layout_height="50dp">
    <ImageView 
    android:id="@+id/iv_mylibrary_red"
    android:layout_width="30dp"
   android:layout_marginTop="9dp"
    android:visibility="invisible"
    android:layout_height="20dp"
    android:src="@drawable/red"/>
    <ImageView 
    android:id="@+id/iv_mylibrary_red_vertical"
    android:layout_width="30dp"
    android:layout_marginTop="9dp"
    android:visibility="invisible"
    android:layout_height="20dp"
    android:src="@drawable/red_minus"/>
    <ImageView 
    android:id="@+id/iv_mylibrary_green_vertical"
    android:layout_width="30dp"
    android:layout_marginTop="9dp"
    android:visibility="invisible"
    android:layout_height="20dp"
    android:src="@drawable/green"/>
       <FrameLayout
	           android:id="@+id/fl_my_library_add"
	           android:layout_width="250dp"
	           android:visibility="invisible"
	           android:layout_marginTop="10dp"
               android:layout_marginLeft="10dp"
	           android:layout_height="wrap_content">
	          <EditText 
	            android:id="@+id/et_my_library_addTerms" 
	            android:layout_width="200dp"
	            android:layout_height="39dp"
	            android:hint="Add terms"
	            android:inputType="textNoSuggestions"
	            android:cursorVisible="true"
	            android:imeOptions="actionDone"
	            android:textColor="#000000"
	            android:textSize="12dp"
	            android:singleLine="true"></EditText>
	          <ImageButton
	            android:id="@+id/ivbtn_mylibrary_addTerms"
	            android:layout_height="wrap_content"
	            android:layout_width="wrap_content"
	            android:visibility="gone"
	            android:layout_gravity="right"
	            android:layout_marginTop="3dp"/>
	         </FrameLayout>
    <TextView 
    android:id="@+id/tv_album_name_of_album"
    android:layout_height="50dp" 
    android:layout_width="200dp"
    android:textSize="10dp"
    android:layout_toRightOf="@+id/iv_mylibrary_red"
    android:textColor="#000000"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="10dp"
    android:text=""/>
    <Button
    android:id="@+id/btn_my_library_save"
    android:layout_width="90dp"
     android:layout_centerVertical="true"
    android:layout_height="38dp"
    android:text="SAVE"
    android:visibility="invisible"
    android:layout_alignParentRight="true"></Button>
    <FrameLayout 
    android:id="@+id/fl_deleteButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:visibility="invisible"
    android:layout_marginRight="10dp"
    android:layout_marginTop="7dp"> 
     <ImageView 
    android:id="@+id/iv_mylibrary_redButton"
    android:layout_width="80dp"
    android:layout_height="25dp"
    android:background="@drawable/red_button"/>
    <TextView android:layout_width="80dp"
    android:layout_height="25dp"
    android:gravity="center_vertical|center_horizontal"
    android:text="Delete"
    
    android:textColor="#000000"></TextView> 
    </FrameLayout>
  </RelativeLayout>
</RelativeLayout>
